<li class="review-row">
  <div class="pull-left">
    <div class="content"><%= review.name %></div>
    <% if review.active? %>
      <div class="timestamp">
        Expires in <%= distance_of_time_in_words(Time.now, review.expiry) %>.
      </div>
    <% end %>
  </div>
  <div class="pull-right">
    <div class="btn-group">
      <button class="btn"><%= review.status.humanize %></button>
      <button class="btn dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <a href="#">Edit</a>
        </li>
      </ul>
    </div>
  <div>
</li>