<% provide(:title, @review.name + " Reviewers") %>

<%= render 'shared/breadcrumb' %>

<div class="page-header">
  <h1>Reviewers for <%= @review.name %></h1>
</div>


<div class="row">
  <div class="span8">
    <div class="well">
      
      <%= nested_form_for(@review_reviewer) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>


       
          <%= f.label :relationship, class: "" %>
          <%= f.text_field :relationship, class: "" %>
          
          <%= f.fields_for :reviewer, f.object.reviewer.nil? ? f.object.build_reviewer : :reviewer do |f1| %>
            <%= f1.label :email, class: "" %>
            <%= f1.text_field :email, class: "" %>
         <% end %>

  

        <div class="form-actions">
          <%= f.submit "Invite Reviewer", class: "btn btn-primary" %>
        </div>
      <% end %>
      
    
    </div>
  </div>
</div>