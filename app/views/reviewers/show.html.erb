<% provide(:title, @review.name + " Reviewers") %>

<ul class="breadcrumb">
  <li>
    <a href="#"><%= @current_user.name %></a> 
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= @review.name %>
    <span class="divider">/</span>
  </li>
  <li>Reviewers</li>
</ul>

<div class="page-header">
  <h1>Reviewers for <%= @review.name %></h1>
</div>


<div class="row">
  <div class="span8">
    <div class="well">
      <% if @review.reviewers.any? %>
        <ul class="reviewers">
          <%= render @review.reviewers %>
        </ul>
        <%= link_to "Add Reviewer +", "new_reviewer_path", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>